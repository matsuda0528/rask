<p id="notice"><%= notice %></p>

<div class="add"><b>Users</b></div>
<a href="/users/new" class="add"><i class="far fa-plus-square"></i></a>

<div class="display">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><a href="<%= "users/#{user.id}" %>"><i class="far fa-eye"></i></a></td>
        <td><a href="<%= edit_user_path(user) %>"><i class="fas fa-pen"></i></td>
        <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
