<header class="bg-red-400 p-3 shadow flex text-white">
  <%= link_to "Rask", tasks_path, class: 'font-bold' %>
  <div class="flex-1"></div>
  <ul class="flex gap-4">
    <% if logged_in? %>
      <li><%= link_to "ログアウト", logout_path, method: :delete, data: { confirm: 'ログアウトしますか？' } %></li>
    <% else %>
      <li><%= link_to "ログイン", '/auth/github', method: :post %></li>
      <li><%= link_to "ゲストログイン", '/guest_sign_in', method: :post %></li>
    <% end %>
  </ul>
</header>
