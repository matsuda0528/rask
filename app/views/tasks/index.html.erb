<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= link_to 'タスク新規登録', new_task_path %>
|
<%= link_to 'ユーザ一覧', "/users" %>

<table>
  <thead>
    <tr>
      <th>Registerdate</th>
      <th>Duedate</th>
      <th>Task</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td style="white-space: nowrap;"><%= task.registerdate %></td>
        <td style="white-space: nowrap;"><%= task.duedate %></td>
        <td><%= task.task %></td>
        <td><%= link_to User.find_by_id(task.user_id)&.name, "/users/#{task.user_id}" %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
